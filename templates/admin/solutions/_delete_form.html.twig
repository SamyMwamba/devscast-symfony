<form class="d-inline-block" method="post" action="{{ path('admin_solutions_delete', {'id': solution.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ solution.id) }}">
    <button class="btn btn-sm btn-danger">
        <i class="fa fa-trash"></i>
    </button>
</form>
