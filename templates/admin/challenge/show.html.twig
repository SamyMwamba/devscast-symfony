{% extends 'layout/admin.html.twig' %}

{% block breadcrumb %}
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-style1 mg-b-10">
                <li class="breadcrumb-item"><a href="{{ path('admin_index') }}">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ path('admin_challenge_index') }}">Challenge</a></li>
            </ol>
        </nav>
        <h1 class="mg-b-0 tx-spacing--1">{{ challenge.name }}</h1>
    </div>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="mb-3">
            <a class="btn btn-sm btn-primary" href="{{ path('admin_challenge_edit', {id: challenge.id}) }}">
                <i class="fa fa-edit"></i>
            </a>
            {{ include('admin/challenge/_delete_form.html.twig') }}
        </div>
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ challenge.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ challenge.name }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ challenge.content }}</td>
                    </tr>
                    <tr>
                        <th>Created_at</th>
                        <td>{{ challenge.createdAt ? challenge.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Updated_at</th>
                        <td>{{ challenge.updatedAt ? challenge.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Is_solved</th>
                        <td>{{ challenge.isSolved ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ challenge.slug }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}



