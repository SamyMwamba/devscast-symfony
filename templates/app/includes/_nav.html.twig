{% set _route = app.request.get('_route') %}

<nav class="navbar navbar-expand-lg navbar-light bg-black">
    <div class="container">
        <a class="navbar-brand" href="{{ path('home') }}">
            <img src="{{ asset('/assets/img/logo.png') }}" alt="image">
        </a>
        <button
                class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item"><a title="project" class="nav-link" href="">Projects</a></li>
                <li class="nav-item">
                    <a title="screencast"
                       href=""
                       class="nav-link">
                        ScreenCast
                    </a>
                </li>
                <li class="nav-item">
                    <a title="blog"
                       class="nav-link {{ _route == "app_blog_index" ? 'active' : '' }}"
                       href="{{ path('app_blog_index') }}">
                        Blog
                    </a>
                </li>
                <li class="nav-item">
                    <a title="about"
                       class="nav-link {{ _route == "about" ? 'active' : '' }}"
                       href="{{ path('about') }}">
                        About
                    </a>
                </li>
                <li class="nav-item">
                    <a title="contact"
                       class="nav-link {{ _route == "contact" ? 'active' : '' }}"
                       href="{{ path('contact') }}">
                        Contact
                    </a>
                </li>
                <li class="nav-item ml-lg-5">
                    <div class="navbar-search">
                        <form action="/search" method="get" class="search-form">
                            <label for="q" class="screen-reader-text">Search for:</label>
                            <input type="search" id="q" name="q" class="search-field" placeholder="search...">
                            <button type="submit"><i class="fas fa-search"></i></button>
                        </form>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>
