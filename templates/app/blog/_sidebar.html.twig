<aside class="widget-area" id="secondary">
    <section class="widget widget_search">
        <form class="search-form">
            <label>
                <span class="screen-reader-text">Search for:</span>
                <input type="search" class="search-field" placeholder="Search...">
            </label>
            <button type="submit"><i class="fas fa-search"></i></button>
        </form>
    </section>

    <section class="widget widget_axton_posts_thumb">
        <h3 class="widget-title">Popular Posts</h3>
        {% for i in 1..3 %}
            <article class="item">
                <a href="" class="thumb">
                    <span class="fullimage cover bg1" role="img"></span>
                </a>
                <div class="info">
                    <time datetime="2019-06-30">June 10, 2019</time>
                    <h4 class="title usmall">
                        <a href="">
                            Making Peace With The Feast Or Famine Of Freelancing
                        </a>
                    </h4>
                </div>
                <div class="clear"></div>
            </article>
        {% endfor %}
    </section>

    <section class="widget widget_recent_entries">
        <h3 class="widget-title">Recent Posts</h3>
        <ul>
            {% for i in 1..3 %}
                <li><a href="">How to Become a Successful Entry Level UX Designer</a></li>
            {% endfor %}
        </ul>
    </section>

    <section class="widget widget_archive">
        <h3 class="widget-title">Archives</h3>
        <ul>
            {% for i in 1..3 %}
                <li><a href="">2019</a></li>
            {% endfor %}
        </ul>
    </section>

    <section class="widget widget_categories">
        <h3 class="widget-title">Categories</h3>
        <ul>
            {% for i in 1..5 %}
                <li><a href="">Uncategorized {{ i }}</a></li>
            {% endfor %}
        </ul>
    </section>

    <section class="widget widget_meta">
        <h3 class="widget-title">Meta</h3>

        <ul>
            <li><a href="">Log in</a></li>
            <li>
                <a href="">Entries
                    <abbr title="Really Simple Syndication">RSS</abbr>
                </a>
            </li>
            <li>
                <a href="">Comments
                    <abbr title="Really Simple Syndication">RSS</abbr>
                </a>
            </li>
            <li>
                <a href="">WordPress.org</a>
            </li>
        </ul>
    </section>

    <section class="widget widget_tag_cloud">
        <h3 class="widget-title">Tags</h3>
        <div class="tagcloud">
            {% for i in 1..10 %}
                <a href="">IT <span class="tag-link-count"> ({{ i }})</span></a>
            {% endfor %}
        </div>
    </section>
</aside>
